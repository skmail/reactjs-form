{
  "name": "reactjs-form",
  "description": "A higher order component decorator for forms using React Component state",
  "main": "./lib/index.js",
  "version": "0.1.3",
  "author": "Solaiman Kmail <psokmail@gmail.com> (https://github.com/skmail)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skmail/reactjs-form"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-form",
    "form",
    "decorator",
    "validation"
  ],
  "bugs": {
    "url": "https://github.com/skmail/reactjs-form/issues"
  },
  "dependencies": {
    "flat": "4.0.0",
    "immutability-helper": "2.6.4",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "validatorjs": "3.14.2"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.39",
    "@babel/core": "7.0.0-beta.39",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.39",
    "@babel/preset-env": "7.0.0-beta.39",
    "@babel/preset-flow": "7.0.0-beta.39",
    "@babel/preset-react": "7.0.0-beta.39",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "8.2.1",
    "babel-jest": "22.2.2",
    "codecov.io": "0.1.6",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.17.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.43.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.6.1",
    "flow-bin": "0.65.0",
    "flow-typed": "2.3.0",
    "jest": "22.2.2",
    "lint-staged": "6.1.0"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "npm run test -- --watchAll",
    "test:cov": "npm run test -- --coverage ",
    "test:flow": "flow check",
    "lint": "eslint src",
    "prepublish": "npm run lint && npm run test:cov && npm run test:flow",
    "examples:start": "npm --prefix ./examples/ start",
    "examples": "npm --prefix ./examples install && npm run example:start",
    "gitcommit": "git add . && npm version patch && npm run prepublish  && git commit -m",
    "build": "babel src --out-dir lib --ignore tests",
    "deploy": "npm version patch && npm publish && npm run "
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/tests/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  }
}
